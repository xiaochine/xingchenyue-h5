@import './utils/animate.wxss';

/**app.wxss**/
.container {

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
  font-size: 1rem;
  background-color: #7B48D9;
  height: 10rem;
}

.i-tab-bar {
  display: flex;
  width: 100%;
  height: 50px;
  box-sizing: border-box;
  position: relative;
  justify-content: space-around;
  align-items: center;
  -webkit-box-align: center;
  background: #fff;
  bottom: 1rem;
  position: fixed;
}

.card-content {
  height: 13rem;
  text-align: center;
  overflow-y: auto;
  line-height: 1.2rem;
}

.card-footer {
  display: inline-flex;
  text-align: center;
  width: 100%;
}

.card-footer .f1 {
  text-align: left;
  width: 33%;
}

.card-footer .f2 {
  text-align: center;
  width: 33%;
}

.card-footer .f3 {
  text-align: right;
  width: 33%;
}